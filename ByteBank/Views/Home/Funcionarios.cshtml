@model IEnumerable<ByteBank.Models.Funcionario>
@{
    ViewData["Title"] = "Lista";
}

<h2>Lista de Funcionários</h2>


@if (Model.Count() != 0)
{
    <a class="btn btn-dark" asp-controller="Designer" asp-action="Cadastrar">Cadastrar Novo Designer</a>
    <a class="btn btn-dark" asp-controller="Diretor" asp-action="Cadastrar">Cadastrar Diretor</a>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">Cpf</th>
                <th scope="col">Salário</th>
                <th scope="col">Cargo</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {

                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Nome</td>
                    <td>@item.CPF</td>
                    <td>R$ @item.Salario</td>
                    <td>@item.Cargo</td>
                    <td><a class="btn" asp-action="Remover" asp-route-id="@item.Id">Remover</a></td>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <p>Não existem Designers Cadastrados</p>
    <a class="btn btn-dark" asp-controller="Designer" asp-action="Cadastrar">Cadastrar Designer</a>
    <a class="btn btn-dark" asp-controller="Diretor" asp-action="Cadastrar">Cadastrar Diretor</a>
}
