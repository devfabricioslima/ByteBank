@model IEnumerable<ByteBank.Models.Funcionario>
@{
    ViewData["Title"] = "lista_funcionarios";
}

<h2>lista_funcionarios</h2>

@if (Model.Count() != 0)
{

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">Cpf</th>
                <th scope="col">Salário</th>
                <th scope="col"></th>  
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Nome</td>
                    <td>@item.CPF</td>
                    <td>R$ @item.Salario</td>
                    <td><a class="btn" asp-controller="Funcionario" asp-action="RemoverFuncionario" asp-route-id="@item.Id">Remover</a></td>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <p>Não existem funcionários cadastrados</p>
    <a asp-action="Index">Cadastrar Funcionário</a>
}

