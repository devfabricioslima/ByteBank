@model ByteBank.Models.Funcionario
@{
    ViewData["Title"] = "Funcionarios";
}

<h2>Funcionário</h2>

<form asp-controller="Funcionario" asp-action="CadastrarFuncionario" method="post">
    <div class="mb-3">
        <label asp-for="@Model.Nome" class="form-label">Nome</label>
        <input asp-for="@Model.Nome" type="text" class="form-control" placeholder="Nome">
    </div>
    <div class="mb-3">
        <label asp-for="@Model.CPF" class="form-label">CPF</label>
        <input asp-for="@Model.CPF" type="text" class="form-control" placeholder="CPF">
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Salario" class="form-label">Salário</label>
        <input asp-for="@Model.Salario" type="text" class="form-control" placeholder="R$:0,00">
    </div>
    <div class="col-12">
        <button type="submit" class="btn btn-dark">Cadastrar</button>
    </div>
</form>